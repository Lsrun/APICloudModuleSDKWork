<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp240"
            android:layout_marginTop="@dimen/dp20"
            tools:src="@mipmap/mo_aotao_reader_icon_loading" />

        <TextView
            android:id="@+id/tv_articlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:textColor="@color/text_title"
            android:textSize="@dimen/sp25"
            tools:text="@string/app_name" />

        <LinearLayout
            android:id="@+id/ll_isfriend"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp30"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/mo_aotao_reader_shape_btn_1"
            android:gravity="center"
            android:textSize="14sp">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/mo_aotao_reader_tab4_iocn0" />

            <TextView
                android:id="@+id/tv_isfriend"
                style="@style/slide_tab4_text"
                android:text="关注" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:gravity="center">

            <ImageView
                style="@style/slide_tab4_icon"
                android:src="@mipmap/mo_aotao_reader_tab4_iocn1" />

            <TextView
                android:id="@+id/tv_goodnum"
                style="@style/slide_tab4_text"
                tools:text="14" />


            <ImageView
                style="@style/slide_tab4_icon"
                android:src="@mipmap/mo_aotao_reader_tab4_iocn2" />

            <TextView
                android:id="@+id/tv_allvote"
                style="@style/slide_tab4_text"
                tools:text="14" />

            <ImageView
                style="@style/slide_tab4_icon"
                android:src="@mipmap/mo_aotao_reader_tab4_iocn3" />

            <TextView
                android:id="@+id/tv_allvisit"
                style="@style/slide_tab4_text"
                tools:text="1234" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp13"
            android:gravity="center">


            <ImageView
                style="@style/slide_tab4_icon"
                android:src="@mipmap/mo_aotao_reader_tab4_iocn4" />

            <TextView
                android:id="@+id/tv_giftnum"
                style="@style/slide_tab4_text"
                tools:text="1234" />

            <ImageView
                style="@style/slide_tab4_icon"
                android:src="@mipmap/mo_aotao_reader_tab4_iocn5" />

            <TextView
                android:id="@+id/tv_allvipvote"
                style="@style/slide_tab4_text"
                tools:text="1234" />

            <ImageView
                style="@style/slide_tab4_icon"
                android:src="@mipmap/mo_aotao_reader_tab4_iocn6" />

            <TextView
                android:id="@+id/tv_reviewsnum"
                style="@style/slide_tab4_text"
                tools:text="1234" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@drawable/mo_aotao_reader_shape_btn"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="状态"
                android:textColor="#a64cbe"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_fullflag"
                style="@style/slide_tab4_text_1" />

            <TextView
                android:id="@+id/tv_issignvip"
                style="@style/slide_tab4_text_1" />

            <TextView
                android:id="@+id/tv_firstflag"
                style="@style/slide_tab4_text_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@drawable/mo_aotao_reader_shape_btn"
                android:gravity="center"
                android:paddingEnd="@dimen/dp10"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="@dimen/dp10"
                android:text="分类"
                android:textColor="#a64cbe"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_sort"
                style="@style/slide_tab4_text_1" />

            <TextView
                android:id="@+id/tv_type"
                style="@style/slide_tab4_text_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@drawable/mo_aotao_reader_shape_btn"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="标签"
                android:textColor="#a64cbe"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_nature1"
                style="@style/slide_tab4_text_1" />

            <TextView
                android:id="@+id/tv_nature2"
                style="@style/slide_tab4_text_1" />

            <TextView
                android:id="@+id/tv_nature3"
                style="@style/slide_tab4_text_1" />

            <TextView
                android:id="@+id/tv_nature4"
                style="@style/slide_tab4_text_1"
                android:ellipsize="end"
                android:maxLines="1" />

        </LinearLayout>

        <View
            style="@style/view_line_short"
            android:layout_marginTop="@dimen/dp30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="作品公告"
            android:textColor="@color/text_title"
            android:textSize="@dimen/sp24" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:layout_marginTop="@dimen/dp40"
            android:lineSpacingExtra="@dimen/dp5"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp20"
            tools:text="发送垃圾看时代峰峻看来就水电费极乐空间水电费老框架撒地方极乐空间是的疯狂了解了啥的房间" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="作品简介"
            android:textColor="@color/text_title"
            android:textSize="@dimen/sp24" />

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:layout_marginTop="@dimen/dp40"
            android:lineSpacingExtra="@dimen/dp5"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp20"
            tools:text="发送垃圾看时代峰峻看来就水电费极乐空间水电费老框架撒地方极乐空间是的疯狂了解了啥的房间" />


    </LinearLayout>
</ScrollView>