<resources>


    <style name="guideTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>

    </style>


    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="setting_dialog_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/mo_aotao_reader_shape_download_info_grid_item</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="text_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="setting_dialog" parent="android:Theme.Dialog">

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
    </style>


    <style name="setting_dialog_iv">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="slide_tab4_icon">
        <item name="android:layout_width">@dimen/dp15</item>
        <item name="android:layout_height">@dimen/dp15</item>
        <item name="android:layout_marginLeft">@dimen/dp15</item>
    </style>

    <style name="slide_tab4_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp5</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:text">@string/read_num_default</item>
    </style>

    <style name="slide_tab4_text_1" parent="slide_tab4_text">
        <item name="android:layout_marginLeft">@dimen/dp15</item>
        <item name="android:text">@string/read_content_default</item>
    </style>


    <!-- view分割线样式 -->
    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1</item>
        <item name="android:background">@color/devider_color</item>
    </style>

    <!-- view分割线样式短 -->
    <style name="view_line_short" parent="view_line">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- view分割线样式 -->
    <style name="view_line_vertical">
        <item name="android:layout_width">@dimen/dp1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/devider_color</item>
    </style>


    <!-- popupwindow -->
    <!-- 从下到上 -->
    <style name="app_pop">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_down</item>
    </style>

    <!-- 从上到下 -->
    <style name="app_pop2">
        <item name="android:windowEnterAnimation">@anim/pop_up2</item>
        <item name="android:windowExitAnimation">@anim/pop_down2</item>
    </style>

    <!-- 从左到右 -->
    <style name="app_pop_1">
        <item name="android:windowEnterAnimation">@anim/pop_down_1</item>
        <item name="android:windowExitAnimation">@anim/pop_up_1</item>
    </style>

    <!-- 可见度从无到有 -->
    <style name="app_pop_2">
        <item name="android:windowEnterAnimation">@anim/pop_down_2</item>
        <item name="android:windowExitAnimation">@anim/pop_up_2</item>
    </style>

    <!-- 可见度从无到有 -->
    <style name="app_pop_3">
        <item name="android:windowEnterAnimation">@anim/alpha</item>
        <item name="android:windowExitAnimation">@anim/alpha_2</item>
    </style>

</resources>
