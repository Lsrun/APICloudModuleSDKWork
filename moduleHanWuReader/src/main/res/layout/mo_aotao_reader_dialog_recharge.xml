<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_pop_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp20"
        android:background="@null"
        android:src="@mipmap/mo_aotao_reader_icon_close1" />

    <LinearLayout
        android:id="@+id/ll_red_packet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:text="充值"
            android:textColor="#525252"
            android:textSize="@dimen/sp22" />

        <View style="@style/view_line_short" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:text="购买章节："
                android:textColor="#4b4b4b"
                android:textSize="@dimen/sp22" />

            <TextView
                android:id="@+id/tv_payChapterCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:text="@string/read_content_default"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/sp22" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:text="应付总额："
                android:textColor="#4b4b4b"
                android:textSize="@dimen/sp22" />

            <TextView
                android:id="@+id/tv_sumprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:text="0"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/sp22" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp13">


            <TextView
                android:id="@+id/tv_egold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:text="余额不足，请充值"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/sp22" />

        </LinearLayout>

        <GridView
            android:id="@+id/gv_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp20"
            android:numColumns="2"/>

    </LinearLayout>

</RelativeLayout>